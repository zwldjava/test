[MASTER]
disable=
    C0111,  # missing-docstring
    C0103,  # invalid-name
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0212,  # protected-access

[FORMAT]
max-line-length=88
indent-string='    '

[DESIGN]
max-args=10
max-locals=15
max-returns=6
max-branches=12
max-statements=50

[MESSAGES CONTROL]
confidence=
    HIGH,
    CONTROL_FLOW,
    INFERENCE,
    INFERENCE_FAILURE,
    UNDEFINED

[TYPECHECK]
ignored-modules=
    pytest
    allure
    faker
